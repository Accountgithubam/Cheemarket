<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cheemarket.ActivityAtelaatkala"
    android:layoutDirection="ltr"
    tools:showIn="@layout/activity_atelaatkala">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dip">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dip"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="100dip"
                            android:layout_height="36dip"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgsheare"
                                android:layout_width="60dip"
                                android:layout_height="match_parent"
                                android:layout_margin="3dip"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@drawable/iconshare" />

                            <ImageView
                                android:id="@+id/imgalaghemandi"
                                android:layout_width="60dip"
                                android:layout_height="match_parent"
                                android:layout_margin="3dip"
                                android:layout_weight="1"
                                android:background="@drawable/iconlike"
                                android:scaleType="fitXY" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dip"
                                android:gravity="right|center"
                                android:text=""
                                android:textColor="#000000"
                                android:textSize="18dip" />

                            <TextView
                                android:id="@+id/txtcode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dip"
                                android:gravity="right|center"
                                android:text=""
                                android:textColor="#000000"
                                android:textSize="18dip" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/talaei"
                            android:layout_width="match_parent"
                            android:layout_height="50dip"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="2dip"
                                android:layout_marginBottom="2dip">

                                <ImageView
                                    android:id="@+id/imageView2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/pishnahadvizhtitle" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="2dip"
                                    android:layout_marginLeft="2dip"
                                    android:layout_marginTop="2dip"
                                    android:layout_marginEnd="2dip"
                                    android:layout_marginRight="2dip"
                                    android:layout_marginBottom="2dip"
                                    android:orientation="horizontal"
                                    android:padding="2dip">

                                    <TextView
                                        android:id="@+id/h"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"

                                        android:layout_weight="1"
                                        android:elevation="0dp"
                                        android:text="0"
                                        android:textColor="#ffffff"
                                        android:textSize="25dip" />

                                    <TextView
                                        android:id="@+id/textView22"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"

                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dip"
                                        android:layout_marginRight="5dip"
                                        android:layout_weight="1"
                                        android:text=":"
                                        android:textColor="#ffffff"
                                        android:textSize="25dip" />

                                    <TextView
                                        android:id="@+id/m"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"

                                        android:layout_weight="1"
                                        android:text="0"
                                        android:textColor="#ffffff"
                                        android:textSize="25dip" />

                                    <TextView
                                        android:id="@+id/textView23"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"

                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dip"
                                        android:layout_marginRight="5dip"
                                        android:layout_weight="1"
                                        android:text=":"
                                        android:textColor="#ffffff"
                                        android:textSize="25dip" />

                                    <TextView
                                        android:id="@+id/s"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"

                                        android:layout_weight="1"
                                        android:text="0"
                                        android:textColor="#ffffff"
                                        android:textSize="25dip" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dip"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <view
                            android:id="@+id/txtoff"
                            class="com.cheemarket.Customview.Lineimage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dip"
                            android:layout_marginTop="10dip"
                            android:layout_marginRight="8dip"
                            android:layout_weight="1"
                            android:textSize="18dip" />

                        <TextView
                            android:id="@+id/txtprice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dip"
                            android:layout_marginRight="3dip"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text=""
                            android:textSize="18dip" />

                        <TextView
                            android:id="@+id/txtafzodan"
                            android:layout_width="match_parent"
                            android:layout_height="37dip"
                            android:layout_margin="10dip"
                            android:layout_weight="1"
                            android:background="#d966d23c"
                            android:enabled="false"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text="افزودن به سبد خرید"
                            android:textColor="#000000" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/txttozihat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="7dip"
                        android:gravity="right"
                        android:padding="3dip"
                        android:text="" />
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:scaleType="fitXY" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.core.widget.NestedScrollView>
