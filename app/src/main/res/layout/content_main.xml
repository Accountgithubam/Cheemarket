<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cheemarket.JavadEsmaeili.ActivityMain"
    android:layoutDirection="ltr"
    tools:showIn="@layout/app_bar_main">


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <requestFocus />

                <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="220dp" />

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/view_pager"
                    android:layout_centerHorizontal="true"
                    android:padding="16dp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:scrollbarSize="2dip">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dip"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/khoshbar"
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dip"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/imgkhoshbar"
                                android:layout_width="wrap_content"
                                android:layout_height="100dip"
                                android:src="@drawable/brokenimage"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="خشک بار و شیرینی" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sayfijat"
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dip"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/imgsayfijat"
                                android:layout_width="wrap_content"
                                android:layout_height="100dip"
                                android:src="@drawable/brokenimage"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="صیفیجات" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/chaei"
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dip"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imgchaei"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:layout_width="wrap_content"
                                android:layout_height="100dip"
                                android:src="@drawable/brokenimage"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="چای و دمنوش" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sabzijat"
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dip"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imgsabzijat"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:layout_width="wrap_content"
                                android:layout_height="100dip"
                                android:src="@drawable/brokenimage"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="سبزیجات" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/khorma"
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dip"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/imgkhorma"
                                android:layout_width="wrap_content"
                                android:layout_height="100dip"
                                android:src="@drawable/brokenimage"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="خرما" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/asal"
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dip"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/imgasal"
                                android:layout_width="wrap_content"
                                android:layout_height="100dip"
                                android:src="@drawable/brokenimage"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="عسل" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/asasi"
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dip"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/imgasasi"
                                android:layout_width="wrap_content"
                                android:layout_height="100dip"
                                android:src="@drawable/brokenimage"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="اساسی و خواروبار" />
                        </LinearLayout>




                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:layout_marginTop="2dip"
                        android:layout_marginBottom="2dip">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/pishnahadvizhtitle" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="2dip"
                            android:layout_marginLeft="2dip"
                            android:layout_marginTop="2dip"
                            android:layout_marginEnd="2dip"
                            android:layout_marginRight="2dip"
                            android:layout_marginBottom="2dip"
                            android:orientation="horizontal"
                            android:padding="2dip">

                            <TextView
                                android:id="@+id/h"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:elevation="0dp"

                                android:padding="3dip"
                                android:text="0"
                                android:textColor="#ffffff"
                                android:textSize="25dip" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical|center_horizontal"

                                android:text=":"
                                android:textSize="25dip" />

                            <TextView
                                android:id="@+id/m"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical|center_horizontal"

                                android:padding="3dip"
                                android:text="0"
                                android:textColor="#ffffff"
                                android:textSize="25dip" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical|center_horizontal"

                                android:text=":"
                                android:textSize="25dip" />

                            <TextView
                                android:id="@+id/s"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical|center_horizontal"

                                android:padding="3dip"
                                android:text="0"
                                android:textColor="#ffffff"
                                android:textSize="25dip" />

                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="270dip"
                        android:focusable="false"
                        android:orientation="horizontal">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/List1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:focusable="false" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/post2"
                    android:layout_width="match_parent"
                    android:layout_height="180dip"
                    android:layout_marginTop="5dip"
                    android:layout_marginBottom="5dip"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dip"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/post3"
                                android:layout_width="match_parent"
                                android:layout_height="170dip"
                                android:layout_marginStart="4dip"
                                android:layout_marginLeft="4dip"
                                android:layout_marginTop="4dip"
                                android:layout_marginEnd="4dip"
                                android:layout_marginRight="4dip"
                                android:layout_marginBottom="4dip"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@drawable/brokenimage" />

                        </RelativeLayout>

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dip"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/post4"
                                android:layout_width="match_parent"
                                android:layout_height="170dip"
                                android:layout_margin="4dip"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@drawable/brokenimage" />

                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dip"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/post5"
                            android:layout_width="match_parent"
                            android:layout_height="180dip"
                            android:layout_margin="4dip"
                            android:layout_marginTop="5dip"
                            android:layout_marginBottom="5dip"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/brokenimage" />

                    </RelativeLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/post6"
                    android:layout_width="match_parent"
                    android:layout_height="180dip"
                    android:layout_marginTop="5dip"
                    android:layout_marginBottom="2dip"
                    android:scaleType="fitXY"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dip"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/porforoshtarinmahsolat" />

                    <android.support.v7.widget.RecyclerView

                        android:id="@+id/List4"
                        android:layout_width="match_parent"
                        android:layout_height="270dip"
                        android:padding="3dip" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/post8"
                    android:layout_width="match_parent"
                    android:layout_height="180dip"
                    android:layout_marginTop="5dip"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:layout_marginBottom="3dip"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="match_parent"
                            android:layout_height="50dip"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/mahbodtarinmahsolat" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/List6"
                            android:layout_width="match_parent"
                            android:layout_height="270dip"
                            android:padding="3dip" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
