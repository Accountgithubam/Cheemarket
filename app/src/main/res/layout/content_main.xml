<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cheemarket.ActivityMain"
    android:layoutDirection="ltr"
    tools:showIn="@layout/app_bar_main">


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/silderparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <requestFocus />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="220dp" />

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/view_pager"
                    android:layout_centerHorizontal="true"
                    android:padding="16dp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/List"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:layout_marginTop="2dip"
                        android:layout_marginBottom="2dip">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/pishnahadvizhtitle" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="2dip"
                            android:layout_marginLeft="2dip"
                            android:layout_marginTop="2dip"
                            android:layout_marginEnd="2dip"
                            android:layout_marginRight="2dip"
                            android:layout_marginBottom="2dip"
                            android:orientation="horizontal"
                            android:padding="2dip">

                            <TextView
                                android:id="@+id/h"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"

                                android:elevation="0dp"
                                android:text="0"
                                android:textColor="#ffffff"
                                android:textSize="25dip" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"

                                android:layout_marginLeft="5dip"
                                android:layout_marginRight="5dip"
                                android:text=":"
                                android:textColor="#ffffff"
                                android:textSize="25dip" />

                            <TextView
                                android:id="@+id/m"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"

                                android:text="0"
                                android:textColor="#ffffff"
                                android:textSize="25dip" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"

                                android:layout_marginLeft="5dip"
                                android:layout_marginRight="5dip"
                                android:text=":"
                                android:textColor="#ffffff"
                                android:textSize="25dip" />

                            <TextView
                                android:id="@+id/s"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"

                                android:text="0"
                                android:textColor="#ffffff"
                                android:textSize="25dip" />

                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="270dip"
                        android:focusable="false"
                        android:orientation="horizontal">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/List1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:focusable="false" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/post2"
                    android:layout_width="match_parent"
                    android:layout_height="180dip"
                    android:layout_margin="5dip"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/post3"
                                android:layout_width="match_parent"
                                android:layout_height="170dip"
                                android:layout_margin="5dip"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@drawable/brokenimage" />

                        </RelativeLayout>

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/post4"
                                android:layout_width="match_parent"
                                android:layout_height="170dip"
                                android:layout_margin="5dip"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@drawable/brokenimage" />

                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/post5"
                            android:layout_width="match_parent"
                            android:layout_height="180dip"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_margin="5dip"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/brokenimage" />

                    </RelativeLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/post6"
                    android:layout_width="match_parent"
                    android:layout_height="180dip"
                    android:layout_margin="5dip"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dip"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/porforoshtarinmahsolat" />

                    <androidx.recyclerview.widget.RecyclerView

                        android:id="@+id/List4"
                        android:layout_width="match_parent"
                        android:layout_height="270dip"
                        android:padding="3dip" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/post8"
                    android:layout_width="match_parent"
                    android:layout_height="180dip"
                    android:layout_margin="5dip"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:layout_marginBottom="3dip"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="match_parent"
                            android:layout_height="50dip"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/mahbodtarinmahsolat" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/List6"
                            android:layout_width="match_parent"
                            android:layout_height="270dip"
                            android:padding="3dip" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
