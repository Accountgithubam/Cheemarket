<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="www.cheemarket.com.javadesmaeili.ActivityMain"
    android:layoutDirection="ltr"
    tools:showIn="@layout/app_bar_main">


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <requestFocus />

                <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="220dp" />

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/view_pager"
                    android:layout_centerHorizontal="true"
                    android:padding="16dp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:scrollbarSize="2dip">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dip"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dip"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

                                android:layout_width="wrap_content"
                                android:layout_height="100dip"
                                android:src="@mipmap/dastebandi_tanagholat"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:gravity="center"
                                android:text="تنقلات" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dip"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

                                android:layout_width="wrap_content"
                                android:layout_height="100dip"
                                android:src="@mipmap/dastebandi_konserv"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:gravity="center"
                                android:text="غذای آماده" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dip"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

                                android:layout_width="wrap_content"
                                android:layout_height="100dip"
                                android:src="@mipmap/dastebandi_noshidani"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:gravity="center"
                                android:text="نوشیدنی" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dip"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

                                android:layout_width="wrap_content"
                                android:layout_height="100dip"
                                android:src="@mipmap/dastebandi_protoein"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:gravity="center"
                                android:text="پروتین" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dip"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

                                android:layout_width="wrap_content"
                                android:layout_height="100dip"
                                android:src="@mipmap/dastebandi_sobhane"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:gravity="center"
                                android:text="صبحانه" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dip"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

                                android:layout_width="wrap_content"
                                android:layout_height="100dip"
                                android:src="@mipmap/dastebandi_kalahayeasasi"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:gravity="center"
                                android:text="اساسی " />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dip"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

                                android:layout_width="wrap_content"
                                android:layout_height="100dip"
                                android:src="@mipmap/dastebandi_khorma"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:gravity="center"
                                android:text="خرما" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dip"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

                                android:layout_width="wrap_content"
                                android:layout_height="100dip"
                                android:src="@mipmap/dastebandi_labaniyat"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:gravity="center"
                                android:text="لبنیات" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dip"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

                                android:layout_width="wrap_content"
                                android:layout_height="100dip"
                                android:src="@mipmap/datebandi_mavadshoyande"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:gravity="center"
                                android:text="مواد شوینده" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dip"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

                                android:layout_width="wrap_content"
                                android:layout_height="100dip"
                                android:src="@mipmap/dastebandi_shokolat"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:gravity="center"
                                android:text="شکلات" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dip"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

                                android:layout_width="wrap_content"
                                android:layout_height="100dip"
                                android:src="@mipmap/dastebandi_khoshkbar"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:gravity="center"
                                android:text="خشک بار" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dip"
                            android:orientation="vertical">


                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/profile_image"
                                android:layout_width="wrap_content"
                                android:layout_height="100dip"
                                android:src="@mipmap/dastebandi_arayeshibehdashti"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:gravity="center"
                                android:text="بهداشتی" />
                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:layout_marginTop="2dip"
                        android:layout_marginBottom="2dip">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            app:srcCompat="@mipmap/pishnahadvizhtitle" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="2dip"
                            android:layout_marginLeft="2dip"
                            android:layout_marginTop="2dip"
                            android:layout_marginEnd="2dip"
                            android:layout_marginRight="2dip"
                            android:layout_marginBottom="2dip"
                            android:orientation="horizontal"
                            android:padding="2dip">

                            <TextView
                                android:id="@+id/h"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:background="#007580"
                                android:elevation="0dp"

                                android:padding="3dip"
                                android:text="2"
                                android:textSize="25dip" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical|center_horizontal"

                                android:text=":"
                                android:textSize="25dip" />

                            <TextView
                                android:id="@+id/m"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:background="#007580"

                                android:padding="3dip"
                                android:text="20"
                                android:textSize="25dip" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical|center_horizontal"

                                android:text=":"
                                android:textSize="25dip" />

                            <TextView
                                android:id="@+id/s"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:background="#007580"

                                android:padding="3dip"
                                android:text="55"
                                android:textSize="25dip" />

                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="270dip"
                        android:focusable="false"
                        android:orientation="horizontal">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/List1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:focusable="false" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/post2"
                    android:layout_width="match_parent"
                    android:layout_height="180dip"
                    android:layout_marginTop="5dip"
                    android:layout_marginBottom="5dip"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dip"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/post3"
                                android:layout_width="match_parent"
                                android:layout_height="170dip"
                                android:layout_marginStart="4dip"
                                android:layout_marginLeft="4dip"
                                android:layout_marginTop="4dip"
                                android:layout_marginEnd="4dip"
                                android:layout_marginRight="4dip"
                                android:layout_marginBottom="4dip"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@mipmap/dastebandi_kalahayeasasi" />

                        </RelativeLayout>

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dip"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/post4"
                                android:layout_width="match_parent"
                                android:layout_height="170dip"
                                android:layout_margin="4dip"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@mipmap/dastebandi_tanagholat" />

                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dip"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/post5"
                            android:layout_width="match_parent"
                            android:layout_height="180dip"
                            android:layout_margin="4dip"
                            android:layout_marginTop="5dip"
                            android:layout_marginBottom="5dip"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@mipmap/dastebandi_konserv" />

                    </RelativeLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/post6"
                    android:layout_width="match_parent"
                    android:layout_height="180dip"
                    android:layout_marginTop="5dip"
                    android:layout_marginBottom="2dip"
                    android:scaleType="fitXY"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dip"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:scaleType="fitXY"
                        app:srcCompat="@mipmap/porforoshtarinmahsolat" />

                    <android.support.v7.widget.RecyclerView

                        android:id="@+id/List4"
                        android:layout_width="match_parent"
                        android:layout_height="270dip"
                        android:padding="3dip" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/post8"
                    android:layout_width="match_parent"
                    android:layout_height="180dip"
                    android:layout_marginTop="5dip"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:layout_marginBottom="3dip"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="match_parent"
                            android:layout_height="50dip"
                            android:scaleType="fitXY"
                            app:srcCompat="@mipmap/mahbodtarinmahsolat" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/List6"
                            android:layout_width="match_parent"
                            android:layout_height="270dip"
                            android:padding="3dip" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
