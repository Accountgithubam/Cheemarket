<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/Cardone"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="2dip"
            android:layout_weight="0.50"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageone"
                    android:layout_width="match_parent"
                    android:layout_height="120dip"
                    android:layout_weight="0.75"
                    android:padding="4dip"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/txtnameone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:maxLines="1"
                    android:paddingRight="4dip"
                    android:singleLine="true"
                    android:text="نان حجیم"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/specialsellone"
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:layout_margin="4dip"
                    android:layout_weight="0.75"
                    android:gravity="center"
                    android:text="پیشنهاد طلایی"
                    android:textColor="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="3dip"
                    android:layout_marginBottom="7dip"
                    android:background="#E8E8E8" />

                <view
                    android:id="@+id/textoffPriceone"
                    class="com.cheemarket.Customview.Lineimage"
                    layout_weight="0.75"
                    layout_width="match_parent"
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip"
                    android:layout_weight="0.75" />

                <TextView
                    android:id="@+id/textPriceone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="4dip"
                    android:paddingBottom="4dip"
                    android:text="3,000 تومان"
                    android:textAlignment="center"
                    android:textColor="#66BB6A"
                    android:textSize="18dip" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>